<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospitaAppointmentSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/homeindex.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
    <link rel="stylesheet" href="~/HospitaAppointmentSystem.styles.css" asp-append-version="true" />
</head>

@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<HospitaAppointmentSystem.Data.Doctor>

    
    <div class="container">
        <h2>@_localization.Getkey("Doctors").Value</h2>
        @if(Model!=null && Model.Any())
        {
            <div class="row">
                @foreach (var doctor in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                        <div class="card h-100">
                            <a href="@Url.Action("CreateAppointment","Appointment")"><img class="card-img-top img-fluid" src="~/img/@doctor.Image"></a>
                            <div class="card-body">
                                <h5 class="card-title">@doctor.DocNameSurname</h5>
                                <p class="card-text">@doctor.DocSpeacialty</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Errrrrrooooorrrr</p>
        }
    </div>
    
    
